<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CandidateInfo"
    tools:ignore="SpeakableTextPresentCheck"
    android:fillViewport="true"
    android:background="@color/bg_white"
    android:paddingEnd="20dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="142dp"
            android:layout_height="90dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/iboto_logo"
            app:srcCompat="@drawable/iboto_no_bg" />

        <LinearLayout
            android:layout_marginStart="27dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            >
            <ImageView
                android:id="@+id/infoImage"
                android:layout_gravity="bottom"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/robredo"
                />

            <TextView
                android:id="@+id/canId"
                android:layout_gravity="bottom"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gothic_a1_extrabold"
                android:textColor="@color/primary_blue"
                android:text="10. Robredo, Leni"
                android:textSize="26sp"
                android:textAllCaps="true"
                />

        </LinearLayout>

        <TextView
            android:layout_width="130dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:fontFamily="@font/gothic_a1_extrabold"
            android:text="source:@votepilipinas.com"
            android:textColor="@color/primary_blue"/>

        <TextView
            android:layout_marginStart="27dp"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Party"
            android:fontFamily="@font/gothic_a1_extrabold"
            android:textColor="@color/primary_blue"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/candidateParty"
            android:layout_marginStart="27dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/questrial"
            android:textColor="@color/black"
            android:textSize="21sp"
            />

        <TextView
            android:layout_marginStart="27dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info"
            android:fontFamily="@font/gothic_a1_extrabold"
            android:textColor="@color/primary_blue"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/infoCandidateTxt"
            android:layout_marginStart="27dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/questrial"
            android:textColor="@color/black"
            android:textSize="13sp"
            />

        <TextView
            android:layout_marginStart="27dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/advocacies_platform"
            android:fontFamily="@font/gothic_a1_extrabold"
            android:textColor="@color/primary_blue"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/candidatePlatform"
            android:layout_marginStart="27dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/questrial"
            android:textColor="@color/black"
            android:textSize="13sp"
            />

        <TextView
            android:layout_marginStart="27dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accomplishments"
            android:fontFamily="@font/gothic_a1_extrabold"
            android:textColor="@color/primary_blue"
            android:textSize="21sp"/>

        <TextView
            android:id="@+id/candidateAccomplishments"
            android:layout_marginStart="27dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/questrial"
            android:textColor="@color/black"
            android:textSize="13sp"
            />



    </LinearLayout>


</ScrollView>