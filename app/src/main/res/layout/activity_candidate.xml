<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Candidate">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="90dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/iboto_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iboto_no_bg" />

    <androidx.cardview.widget.CardView
        android:id="@+id/pres_card"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="130dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/primary_blue"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentPadding="10dp"
        app:contentPaddingBottom="25dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/pres_icon"
            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:textColor="@color/bg_white"
            android:layout_gravity="center|bottom"
            android:text="Presidential"
            android:textSize="17dp"
            android:gravity="center"
            android:fontFamily="@font/gothic_a1"
            />
            

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/vp_card"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="355dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/primary_blue"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentPadding="10dp"
        app:contentPaddingBottom="25dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/vp_icon"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:textColor="@color/bg_white"
            android:layout_gravity="center|bottom"
            android:text="Vice Presidential"
            android:textSize="17dp"
            android:gravity="center"
            android:fontFamily="@font/gothic_a1"
            />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/senate_card"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginTop="580dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/primary_blue"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:contentPadding="10dp"
        app:contentPaddingBottom="25dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center|top"
            app:srcCompat="@drawable/sen_icon"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:textColor="@color/bg_white"
            android:layout_gravity="center|bottom"
            android:text="Senatorial"
            android:textSize="17dp"
            android:gravity="center"
            android:fontFamily="@font/gothic_a1"
            />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>